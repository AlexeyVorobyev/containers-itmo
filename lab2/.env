# --- Images / names ---
POSTGRES_IMAGE=postgres:16
APP_IMAGE_NAME=announcements-app:latest
INIT_IMAGE=ubuntu:24.04

DB_CONTAINER_NAME=announcements-db
INIT_CONTAINER_NAME=announcements-init
APP_CONTAINER_NAME=announcements-app

NETWORK_NAME=announcements-net

# --- App port ---
APP_PORT=5000

# --- Postgres creds/db ---
POSTGRES_DB=announcements
POSTGRES_USER=ann_user
POSTGRES_PASSWORD=ann_pass

# --- Connection for init/app ---
DB_HOST=database
DB_PORT=5432

# app reads DATABASE_URL in code
DATABASE_URL=postgresql://ann_user:ann_pass@database:5432/announcements